<div class="container__titulo">
    <h1 class="titulo-pagina">SEGURANÇA SENHAS</h1>
    <a href="/novaSenha" id="button">Adicionar Nova Senha</a>
</div>

<div class="container__bloco">
    {{#each senhas}}
        <div class="bloco">
            <p>Usuário: {{this.usuario}}</p>
            <p>Senha: {{this.senha}}</p>
            <p>Nota: {{this.nota}}</p>

            <form action="/excluir/{{this.id_senha}}" method="POST">
                <button class="botao-excluir" type="submit">Excluir</button>
            </form>
        </div>
    {{/each}}
</div>

{{#if senhas.length}}
    <form action="/excluir-tudo" method="POST" >
        <div class="container-bloco">
            <button class="botao-excluir-tudo" type="submit">Excluir Todas as Senhas</button>
        </div>
    </form>
{{/if}}

<form action="/logout" method="POST">
    <div class="container-bloco">
        <button>Logout</button>
    </div>
</form>
